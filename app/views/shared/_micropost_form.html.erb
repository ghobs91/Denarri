<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Type in item name, price range, and condition preferences. Ex: iPhone 5 16gb, $350-$450, new only" %>
  </div>

  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>