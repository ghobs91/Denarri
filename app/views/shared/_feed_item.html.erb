<li class = "microposts">
  <div class = "micropost_box">
      
        <img src="http://i.imgur.com/9OlztJm.jpg?1" alt="" width="100" height="150">
        
    <div class="content">
      <%= feed_item.keyword %>
      <br>
      <div class ="price">
        $<%= feed_item.min %> -
        $<%= feed_item.max %>
      </div>
      <div class ="condition">
        <%= feed_item.condition %>
      </div>
    </div>
    
    <div class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </div>
    <div class = "delete_link">
    <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete,
                                       data: { confirm: "You sure?" },
                                       title: feed_item.keyword %>
    <% end %>
    </div>
  </div>
</li>