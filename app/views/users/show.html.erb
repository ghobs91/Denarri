<% provide(:title, @user.name) %>

<div class="row">
    
  <aside class="span4">
    <section>
      <h1>
        <div class="profile_img">
          <%= gravatar_for @user, size: 300 %>          
        </div>

        <div class="profile_name">
          <%= @user.name %>
        </div>
      </h1>
    </section>
  </aside>

  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Item Feed (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @user.microposts %>
      </ol>
     
    <% end %>
  </div>

</div>

